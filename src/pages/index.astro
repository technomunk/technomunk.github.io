---
import { Image } from 'astro:assets';

import avatarImg from '@assets/img/avatar.jpg';
import Card from '@components/Card.astro';
import MainLayout from '@layouts/MainLayout.astro';
---

<MainLayout title="Technomunk" description="Technomunk's online page with a couple of interactive projects and a blog.">
    <header class="strong text-center">
        <Image class="avatar" src={avatarImg} alt="Avatar" />
        <caption translate="no">Grigory <mark>Technomunk</mark> Glukhov</caption>
    </header>
    <main>
        <p>
            Salutations! I'm a programmer by trade and passion. Versed in a variety of topics, tools and methodologies.
            My goal is to be a great universal programmer, capable of solving any problem thrown my way in a concise and
            performant manner. I've developed backend, frontend, gamedev, networking, tooling, 3d rendering, procedural
            animation, integrations, mods and much more using all manners of techniques and approaches.
        </p>
    </main>
    <div class="center text-center">
        <h1 class="text-center">Pages:</h1>
        <nav>
            <Card title="Online blog" href="/blog" />
            <Card title="Interactive Julia sets explorer" href="/julia" />
            <Card title="Pattern making tool" href="/pattern" />
        </nav>
        <!-- TODO: move this into the footer -->
        <address class="card">
            <h2 class="text-center">Contact details:</h2>
            <ul>
                <li><a href="https://github.com/technomunk">Github</a></li>
                <li><a href="mailto: thegriffones@gmail.com">thegriffones@gmail.com</a></li>
            </ul>
        </address>
    </div>
</MainLayout>

<style lang="scss">
    @use '@styles/avatar';
    mark {
        font-style: italic;
        background-color: transparent;
    }
</style>
