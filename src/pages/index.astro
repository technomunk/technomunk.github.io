---
import Avatar from '@components/Avatar.astro';
import Card from '@components/Card.astro';
import MainLayout from '@layouts/MainLayout.astro';

import avatarImg from '@assets/img/avatar.jpg';
import blogImg from '@assets/img/blog.svg';
import clothImg from '@assets/img/cloth.png';
import juliaImg from '@assets/img/julia.png';
import pathtraceImg from '@assets/img/pathtrace.png';
---

<MainLayout
    title="Technomunk"
    description="Technomunk's online page with a couple of interactive projects and a blog."
>
    <header class="strong text-center">
        <Avatar src={avatarImg} />
        <p translate="no">Grigory <mark>Technomunk</mark> Glukhov</p>
    </header>
    <main>
        <p>
            Salutations! I'm a programmer by trade and passion. Versed in a variety of topics, tools
            and methodologies. My goal is to be a great universal programmer, capable of solving any
            problem thrown my way in a concise and performant manner. I've developed backend,
            frontend, gamedev, networking, tooling, 3d rendering, procedural animation,
            integrations, mods and much more using all manners of techniques and approaches.
        </p>
    </main>
    <nav>
        <h1 class="text-center header">Pages:</h1>
        <div class="grid">
            <Card title="Online blog" href="/blog" src={blogImg} alt="Newspaper icon" />
            <Card
                title="Cloth simulation"
                href="/cloth"
                src={clothImg}
                alt="An example frame of the cloth simulation"
            />
            <Card
                title="Julia sets visualization"
                href="/julia"
                src={juliaImg}
                alt="An example of Julia set"
            />
            <Card
                title="Path tracer"
                href="/pathtrace"
                src={pathtraceImg}
                alt="An example of a path traced image"
            />
        </div>
    </nav>
    <!-- TODO: move this into the footer -->
    <address class="footer">
        <h2 class="text-center header">Contact details:</h2>
        <ul>
            <li><a href="https://github.com/technomunk">Github</a></li>
            <li><a href="mailto: thegriffones@gmail.com">thegriffones@gmail.com</a></li>
        </ul>
    </address>
</MainLayout>

<style lang="scss">
    @use '@styles/palette';

    mark {
        font-style: italic;
        background: palette.light-gradient(text-primary, text-accent);
        background-clip: text;
        color: transparent;
        font-weight: 200;
    }
    
    header > p {
        margin: auto;

        @media (max-width: 650px) {
            word-spacing: 100vw;
        }
    }
</style>
