---
import MainLayout from '@layouts/MainLayout.astro';
import SlideMenu from '@components/SlideMenu.astro';

import '@styles/materials.scss';
import '@styles/shapes.scss';
import '@styles/fullscreen.scss';
import '@styles/color.scss';
import '@styles/glass.scss';
---

<MainLayout title="Julia sets explorer" description="Interactive Julia sets explorer and visualizer in real time.">
    <meta
        content="initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no"
        name="viewport"
        slot="head"
    />
    <main>
        <canvas id="view-julia" is="julia-view"></canvas>
    </main>
    <SlideMenu class="glass chamfer text-center text-lg themed flex container">
        <div class="row"><a class="button round no-deco" href="index.html">Home</a></div>
        <div class="row">
            <canvas class="chamfer" id="map" width="360" height="240"></canvas>
        </div>
        <div class="row">
            <label for="limit">Limit</label>
            <input class="round" id="limit" type="number" min="1" value="32" max="1024" />
        </div>
        <div class="row">
            <button class="round" id="start-stop">Start</button>
        </div>
    </SlideMenu>
</MainLayout>

<script>
    import '@scripts/julia';
</script>
