---
import { Image } from 'astro:assets';

type ImageSrc =
    | ImageMetadata
    | Promise<{
          default: ImageMetadata;
      }>;

interface Props {
    title: string;
    src: ImageSrc;
    alt: string;
    href: string;
}
const { title, src, alt, href } = Astro.props;

import '@styles/components/card.scss';
---

<a class="card-2 frame chamfer raise" href={href}>
    <Image src={src} alt={alt} />
    <h2 class="semi-paper">{title}</h2>
</a>
