---
import { Image } from 'astro:assets';

export interface Props {
    src:
        | ImageMetadata
        | Promise<{
              default: ImageMetadata;
          }>;
}

const { src } = Astro.props;
---

<Image class="avatar circle shadow inset" src={src} alt="Avatar" />

<style lang="scss">
    @use '@styles/palette';

    .avatar {
        margin: 0 auto 20px;
        max-width: min(90%, 512px);
        width: 100%;
        height: auto;
        background: border-box palette.light-gradient(primary, secondary);
        border: 4px solid transparent;
    }
</style>
