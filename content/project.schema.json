{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Project",
    "description": "A hobby project schema",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "title": {
            "type": "string",
            "description": "The title of the project"
        },
        "description": {
            "type": "string",
            "description": "A brief description of the project"
        },
        "aspiration": {
            "type": "string",
            "description": "The aspiration or goal of the project"
        },
        "skills": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Technologies used in the project"
        },
        "lastActivity": {
            "type": "string",
            "format": "date",
            "description": "The date of the last activity on the project"
        },
        "status": {
            "type": "string",
            "description": "The current status of the project, e.g., 'Active', 'Inactive', 'Sporadically active'"
        }
    },
    "additionalProperties": false
}
